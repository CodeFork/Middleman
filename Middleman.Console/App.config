<?xml version="1.0" encoding="utf-8"?>

<configuration>
  <configSections>
    <section name="ListenersSection"
             type="Middleman.Server.Configuration.ListenerConfigurationSection, Middleman.Server" />
  </configSections>

  <ListenersSection>
    <Listeners>

      <add DestinationHost="http://www.microsoft.com/"
           ListenSsl="true"
           ListenPort="50443" ListenIp="127.0.0.1" SslCertName="localhost" />

    </Listeners>
  </ListenersSection>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>